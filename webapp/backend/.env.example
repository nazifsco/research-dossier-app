# Research Dossier API Configuration

# Debug mode (set to false in production)
DEBUG=true

# Database (SQLite for dev, PostgreSQL for production)
DATABASE_URL=sqlite:///./research.db
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Redis (required for OAuth state tokens, also used for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# JWT Auth (MUST change in production - use a random 256-bit key)
JWT_SECRET=your-secret-key-change-in-production

# OpenAI (for LLM-powered dossier synthesis)
OPENAI_API_KEY=sk-proj-your-key-here
OPENAI_MODEL=gpt-4o-mini

# Stripe (optional - for payments)
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Email (optional - for notifications)
RESEND_API_KEY=re_your-key-here

# Google OAuth (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# URLs
FRONTEND_URL=http://localhost:3002
API_URL=http://localhost:8000
